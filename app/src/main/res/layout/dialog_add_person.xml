<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_person_dialog"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp"
    tools:context=".transaction.TransactionActivity"
    android:background="@color/colorPrimary"
    >

    <AutoCompleteTextView
        android:id="@+id/editText_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:hint="*Enter Name/Nickname"
        android:padding="5dp"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_keep_adding"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_add_name"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Add"
        android:textSize="20dp" />


</RelativeLayout>