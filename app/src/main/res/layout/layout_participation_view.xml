<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout_item_owed"
    android:background="#feef"
    >
    <!--android:weightSum="100"-->


    <!--android:layout_weight="45"-->
    <RelativeLayout
    android:id="@+id/parent_layout_item_summary"
    android:layout_width="match_parent"
    android:layout_height="46dp"

    >

    <TextView
        android:id="@+id/item_name_view"

        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:gravity="center"

        android:text="Item Name"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/original_price_view"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"

        android:layout_toEndOf="@+id/item_name_view"
        android:text="Original $Price"
        android:textStyle="italic"
        android:textSize="20dp"
        android:gravity="center"

        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/owed_price_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/original_price_view"


        android:text="Amount Owed"
        android:textSize="20dp"
        android:textColor="#000000"

        android:gravity="center"


        />
        <!--android:paddingRight="20dp"-->




    </RelativeLayout>







</LinearLayout>