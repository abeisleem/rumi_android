<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_store_name_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".transaction.TransactionActivity"
    android:background="@color/colorPrimary"
    >

    <EditText
        android:id="@+id/edit_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:gravity="left"
        android:hint="*Store/Restaurant"
        android:textSize="25dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:focusable="true"
        />


    <Button
        android:id="@+id/dialog_positive_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edit_store_name"
        android:layout_marginTop="3dp"
        android:text="Save"
        android:textSize="20dp"
        android:background="@color/colorPrimary" />


</RelativeLayout>